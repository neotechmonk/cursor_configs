{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "detailed": {
        "format": "%(asctime)s - %(name)s - %(levelname)s: %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "formatter": "detailed",
        "level": "DEBUG",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.FileHandler",
        "formatter": "detailed",
        "level": "DEBUG",
        "filename": "logs/staging.log",
        "mode": "a",
        "encoding": "utf-8"
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": ["console", "file"]
    }
  }