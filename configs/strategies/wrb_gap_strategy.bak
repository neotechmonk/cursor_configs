# Wide Range Bar Gap Strategy Configuration
# This strategy combines WRB detection with gap analysis for trade signals

name: "Wide Range Bar Gap Strategy"
steps:
  # Step 1: Detect Wide Range Bar
  - strategy_id: detect_wrb
    system_id: wrb_detect
    description: "Detect if the current bar is a significant wide range bar"
    static_config:
      lookback_bars: 3
      min_size_increase_dec: 0.50  # 50% wider than reference
    dynamic_config: {}  # No dynamic inputs needed for first step

